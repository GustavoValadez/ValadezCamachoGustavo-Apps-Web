@model PracticaSemanal01.Models.Event

@{
    ViewBag.Title = "Create";
}

<h2>Crear Evento</h2>

<div class="jumbotron">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Evento</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2 font-weight-bolder">Título</label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2 font-weight-bolder">Fecha</label>

                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })*@
                    <input type="date" name="Date" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2 font-weight-bolder">Lugar de presentación</label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(model => model.CityId, "CityId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="form-group">
                <label class="control-label col-md-2 font-weight-bolder">Selecciona una Ciudad</label>
                <div class="col-md-10">
                    <select name="CityId" class="form-control">
                        <option>Elija una Ciudad</option>
                        @foreach (var item in ViewBag.Ciudades)
                        {
                            <option value="@item.Id">@item.CityName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />

                    <a href="@Url.Action("Index","Events")" class="btn btn-outline-primary">Cancelar</a>

                </div>
            </div>


            @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>*@
        </div>
    }

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

</div>



